<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Popover_Animation" />

    <style name="Popover_Animation.DropDownDown">
        <item name="android:windowEnterAnimation">@anim/grow_down_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_up_fade_out</item>
    </style>

    <style name="Popover_Animation.DropDownUp">
        <item name="android:windowEnterAnimation">@anim/grow_up_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_down_fade_out</item>
    </style>

    <style name="Popover_Animation.Fade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>